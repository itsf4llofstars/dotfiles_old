"" Ubuntu Raspberry Pi 4 VIMRC

"" FUNCTIONS {{{
function GetLine()
  " autocmd BufReadPost * if line("'\"") > 1 && line("'\"") <= line("$") | exe (WRAP IN QUOTES)normal g'\" | endif
  if line("'\"") > 1 && line("'\"") <= line("$")
    exec "normal g'\""
  endif
endfunction

function Indent()
  :normal! mpHmogg=G'ozt`p
endfunction

function StripWhiteSpace()
  :normal! mpHmo
  %s/\s\+$//e
  :normal! 'ozt`p
endfunction

function ShowWhitespace()
  match ErrorMsg '\s\+$'
endfunction

"" }}}

"" SETTINGS {{{
filetype indent plugin on
syntax on
set backspace=indent,eol,start
set guicursor=""
