set hidden
set nohlsearch
set ignorecase
set incsearch
set laststatus=2
set lazyredraw
set modeline
set noruler
set number
set path+=**
set relativenumber
set scrolloff=5
set shortmess+=acsoOTSF
set showcmd
set showmatch
set showmode
set smartcase
set smartindent
set statusline=
set statusline=(%n)\ %F\ %m%r%w%h%q%a\ %y\ \ \ col:\ %c\ \ %p%%%=[%c:%L]\ \ \ %p%%\ -\ %P\ \ \ |
set updatetime=250

set wildmode=list:longest,full
set completeopt=menuone,popup

if has("persistent_undo")
  let target_path = expand("~/.vim/undodir")

  if !isdirectory(target_path)
    call mkdir(target_path, "p", 0700)
  endif

  let &undodir=target_path
  set undofile
  set swapfile
else
  set noundofile
  set nobackup
  set noswapfile
endif

call ShowWhitespace()

let mapleader=" "
let maplocalleader="\\"
"" }}}

