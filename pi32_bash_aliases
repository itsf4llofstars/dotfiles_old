# BASH_ALIASES

alias ls='ls -F --color=always --group-directories-first --quoting-style=shell'
alias lx='ls -lhgGAF --color=always --group-directories-first --quoting-style=shell'
alias la='ls -A --color=always --group-directories-first --quoting-style=shell'
alias ll='ls -1 --color=always --group-directories-first --quoting-style=shell'
alias ld='ls -d .[!.]* --color=always --group-directories-first --quoting-style=shell'

alias srn='sudo reboot now'
alias ssn='sudo shutdowon now'
alias ..='cd ../'
alias ...='cd ../../'
alias ....='cd ../../../'
alias path='echo $PATH | tr -s ":" "\n"'
alias df='df -h /'
alias sob='exec bash'
alias hist='history'
alias tree='tree --dirsfirst -F'
alias pw='pwd'
alias ex='exit'

alias 'unittest'='python3 -m unittest discover -v'

alias vi='vim'
alias vimrc='vim ~/.vimrc'
alias ed='ed -E -v -p "ed: "'
alias nano='nano -r 80'

alias mm='python3 main.py'
alias act='source ./venv/bin/activate'
alias dact='deactivate'

alias comp='g++ -o main main.cpp'
alias comc='gcc -o main main.c'

alias colorz='bash -c "$(wget -qO- https://git.io/vQgMr)"'

# GIT
alias gll='clear && git log --oneline --decorate --graph --all'
alias gl='clear && git log --decorate --all'
alias glo='clear && git log --oneline --decorate --all'
alias gst='clear && git status'
alias gss='clear && git status -s'
alias gbr='clear && git branch'

# du -sh <path> -> Size of Directory

