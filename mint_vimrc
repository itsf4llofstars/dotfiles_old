nnoremap <localleader>s :write<cr>:source $MYVIMRC<cr>
nnoremap <leader>t :shell<CR>

inoremap <C-d> <ESC>ddO

nnoremap <silent> <leader>bn :bnext<cr>
nnoremap <silent> <leader>bp :bprevious<cr>
