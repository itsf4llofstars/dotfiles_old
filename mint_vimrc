"# FUNCTIONS (((
function GetLine()
  if line("'\"") > 1 && line("'\"") <= line("$")
    exec "normal g'\""
  endif
endfunction

function Indent()
  let l:view = winsaveview()
  :normal! gg=G
  call winrestview(l:view)
endfunction

function StripWhiteSpace()
  let l:view = winsaveview()
  %s/\s\+$//e
  call winrestview(l:view)
endfunction

function ShowWhitespace()
  match ErrorMsg '\s\+$'
endfunction

function PrePluginSetup() " (((
