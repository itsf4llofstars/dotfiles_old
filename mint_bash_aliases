# BASH_ALIASES

alias ls='ls -F --color=always --group-directories-first --quoting-style=shell'
alias lx='ls -lhgGAF --color=always --group-directories-first --quoting-style=shell'
alias la='ls -A --color=always --group-directories-first --quoting-style=shell'
alias ll='ls -1 --color=always --group-directories-first --quoting-style=shell'

alias srn='sudo reboot now'
alias ssn='sudo shutdowon now'

alias nv='nvim'
alias vim='nvim'
alias vi='nvim'
alias nconf='cd ~/.config/nvim'
alias vimrc='nvim ~/.config/nvim/init.vim'
alias ed='ed -E -v -p "ed: "'
alias nano='nano -r 79'

alias ard='arduino-cli'

alias mm='python3 main.py'
alias py='python3'
alias act='source ./venv/bin/activate'
alias dact='deactivate'

alias ..='cd ../'
alias ...='cd ../../'
alias ....='cd ../../../'

alias path='echo $PATH | tr -s ":" "\n"'
alias df='df -h /'
alias sob='exec bash'
alias kittyconf='vim ~/.config/kitty/kitty.conf'

alias colorz='bash -c "$(wget -qO- https://git.io/vQgMr)"'

alias hist='history'
alias tree='tree --dirsfirst -F'
alias pw='pwd'
alias ex='exit'

alias comp='g++ -o main main.cpp'
alias comc='gcc -o main main.c'

# GIT
alias gll='git log --oneline --decorate --graph --all'
alias gl='git log --decorate --all'
alias glo='git log --oneline --decorate --all'
alias gst='git status'
alias gss='git status -s'
alias gbr='git branch'

# du -sh <path> -> Size of Directory

alias jan='cal -m 01'
alias feb='cal -m 02'
alias mar='cal -m 03'
alias apr='cal -m 04'
alias may='cal -m 05'
alias jun='cal -m 06'
alias jul='cal -m 07'
alias aug='cal -m 08'
alias sep='cal -m 09'
alias oct='cal -m 010'
alias nov='cal -m 011'
alias dec='cal -m 012'

